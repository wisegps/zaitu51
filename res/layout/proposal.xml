<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:background="@drawable/bground" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText android:textColor="#ff000000" android:gravity="top" android:id="@+id/et_proposal" android:background="@drawable/edittest_background" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@+id/ll_proposal" android:inputType="none" />
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_proposal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <Button android:textColor="#ff000000" android:id="@+id/bt_proposal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/bt_proposal_up" android:layout_weight="1.0" />
        <Button android:textColor="#ff000000" android:id="@+id/bt_proposal_cancle" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@android:string/cancel" android:layout_weight="1.0" />
    </LinearLayout>
</RelativeLayout>
